        "/users": {
          "post": {
            "tags": ["Users"],
            "summary": "Register user",
            "description": "Register user",
            "parameters": [
              {
                "name": "user",
                "in": "body",
                "description": "User that we want to create",
                "schema": {
                  "type": "object",
                  "properties": {
                      "full_name": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string",
                        "uniqueItems": true
                        },
                      "password": {
                        "type": "string"
                      },
                      "phone": {
                        "type": "string"
                          },
                      "role_id": {
                          "type": "integer"
                      }
                  }
                }
              }
            ],
            "produces": ["application/json"],
            "responses": {
              "200": {
                "description": "Register successful",
                "schema": {
                  "$ref": "#/definitions/User"
                }
              }
            }
          }
        },
      "/users/login": {
        "post": {
          "tags": ["Users"],
          "summary": "Login",
          "parameters": [
            {
              "name": "user",
              "in": "body",
              "description": "User that we want to create",
              "schema": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                }
